<?xml version="1.0" encoding="utf-8"?>

<Project>

	<PropertyGroup>
		<CoreVersion>net9.0</CoreVersion>
		<TargetFrameworks>$(CoreVersion)</TargetFrameworks>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<PackageVersion>0.0.1</PackageVersion>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<Platforms>AnyCPU;ARM64;x64</Platforms>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<NoWarn>$(NoWarn);CS8500</NoWarn>
		<Configurations>Debug;DebugGL;Release;ReleaseGL</Configurations>
		<OpenGL>ES</OpenGL>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'DebugGL' OR '$(Configuration)' == 'ReleaseGL'">
		<OpenGL></OpenGL>
	</PropertyGroup>


	<PropertyGroup  Condition="'$(Configuration)' == 'DebugGL'">
		<DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
	</PropertyGroup>
			   
	<PropertyGroup Condition="'$(OpenGL)' == 'ES'">
		<DefineConstants>$(DefineConstants);GLES</DefineConstants>
	</PropertyGroup>


</Project>
