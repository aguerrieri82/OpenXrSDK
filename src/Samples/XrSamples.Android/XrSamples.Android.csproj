<Project Sdk="Microsoft.NET.Sdk">


	<PropertyGroup>
		<TargetFrameworks>$(CoreVersion)-android</TargetFrameworks>
		<SupportedOSPlatformVersion>$(AndroidPlatform)</SupportedOSPlatformVersion>
		<OutputType>Exe</OutputType>
		<ApplicationId>net.eusoft.oculus</ApplicationId>
		<ApplicationVersion>1</ApplicationVersion>
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<RuntimeIdentifiers>android-arm64</RuntimeIdentifiers>
	    <DebugSymbols>True</DebugSymbols>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<RunAOTCompilation>True</RunAOTCompilation>
		<PublishTrimmed>True</PublishTrimmed>
		<EnableLLVM>False</EnableLLVM>
		<Optimize>True</Optimize>
		<EmbedAssembliesIntoApk>True</EmbedAssembliesIntoApk>
		<DebugSymbols>True</DebugSymbols>
		<AndroidManagedSymbols>True</AndroidManagedSymbols> 
		<AndroidLinkTool>r8</AndroidLinkTool>
		<AndroidEnableProfiledAot>False</AndroidEnableProfiledAot>
		<AndroidPackageFormat>apk</AndroidPackageFormat>
	</PropertyGroup>




	<ItemGroup>
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/MagicPhysX/src/MagicPhysX/runtimes/android-arm64/native/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/MagicPhysX/src/libmagicphysx/target/aarch64-linux-android/release/libphysxnative.so" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Framework/OpenXr.Framework/runtimes/android-arm64/native/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Framework/OpenAl.Framework/runtimes/android-arm64/native/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Engine/Filament.Native/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Engine/Draco.Native/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/etcpak/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/meshoptimizer/libs/arm64-v8a/*" />
	</ItemGroup>


	<ItemGroup>
		<ProjectReference Include="..\..\Engine\XrEngine.Filament\XrEngine.Filament.csproj" />
		<ProjectReference Include="..\..\Engine\XrEngine.Media.Android\XrEngine.Media.Android.csproj" />
		<ProjectReference Include="..\..\Engine\XrEngine.OpenXr.Android\XrEngine.OpenXr.Android.csproj" />
		<ProjectReference Include="..\..\Framework\OpenXr.Framework.Android\OpenXr.Framework.Android.csproj" />
		<ProjectReference Include="..\XrSamples.Common\XrSamples.Common.csproj" />
		<ProjectReference Include="..\..\WebLink\XrWebLink.Android\XrWebLink.Android.csproj" />
