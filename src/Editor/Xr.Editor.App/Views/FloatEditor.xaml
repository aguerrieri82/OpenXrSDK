<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:Xr.Editor;assembly=Xr.Editor.Core"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate DataType="{x:Type local:FloatEditor}">
        <DockPanel>
            <TextBox TextAlignment="Center" Width="50px" Text="{Binding Value, StringFormat='0.000'}" DockPanel.Dock="Left"/>
            <Slider Minimum="{Binding Min}" Maximum="{Binding Max}" Value="{Binding Value, Mode=TwoWay}"/>
        </DockPanel>
    </DataTemplate>
   
</ResourceDictionary>