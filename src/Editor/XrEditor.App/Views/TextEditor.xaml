<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:XrEditor;assembly=XrEditor.Core"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="TextEditor" DataType="{x:Type local:ITextEditor}">
        <TextBox Padding="4,4,4,4" MinWidth="150" HorizontalAlignment="Stretch" Text="{Binding EditValue, Mode=TwoWay}"/>
    </DataTemplate>

</ResourceDictionary>