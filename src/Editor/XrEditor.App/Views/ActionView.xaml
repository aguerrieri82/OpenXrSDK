<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:XrEditor;assembly=XrEditor.Core"
                    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate DataType="{x:Type local:ActionView}">
        <Button Margin="0,0,5,0" Padding="5" MinWidth="80"  Command="{Binding ExecuteCommand}">
            <StackPanel Orientation="Horizontal">
                <ContentPresenter Content="{Binding Icon}" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding DisplayName}" />
            </StackPanel>
        </Button>
    </DataTemplate>

</ResourceDictionary>