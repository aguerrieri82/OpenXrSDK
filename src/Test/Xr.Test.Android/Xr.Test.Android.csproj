<Project Sdk="Microsoft.NET.Sdk">


	<PropertyGroup>
		<TargetFrameworks>$(CoreVersion)-android</TargetFrameworks>
		<SupportedOSPlatformVersion>29</SupportedOSPlatformVersion>
		<OutputType>Exe</OutputType>
		<ApplicationId>net.eusoft.oculus</ApplicationId>
		<ApplicationVersion>1</ApplicationVersion>
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<RuntimeIdentifiers>android-arm64</RuntimeIdentifiers>
	    <DebugSymbols>True</DebugSymbols>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<RunAOTCompilation>True</RunAOTCompilation>
		<PublishTrimmed>True</PublishTrimmed>
		<EnableLLVM>False</EnableLLVM>
		<DebugSymbols>True</DebugSymbols>
		<AndroidLinkTool>r8</AndroidLinkTool>
		<AndroidEnableProfiledAot>True</AndroidEnableProfiledAot>
	</PropertyGroup>

	<ItemGroup>
		<AndroidAsset Include="../Xr.Test.Common/Assets/**/*" Link="Assets/%(RecursiveDir)/%(Filename)%(Extension)" />
		<AndroidAsset Include="../../Framework/OpenXr.Framework.Oculus/Models/**/*" Link="Assets/Models/%(RecursiveDir)/%(Filename)%(Extension)" />
	</ItemGroup>


	<ItemGroup>
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Framework/OpenXr.Framework/runtimes/android-arm64/native/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Engine/Filament.Native/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../Engine/Draco.Native/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/etcpak/libs/arm64-v8a/*" />
		<AndroidNativeLibrary Abi="arm64-v8a" Include="../../../third-party/meshoptimizer/libs/arm64-v8a/*" />
	</ItemGroup>


	<ItemGroup>
		<ProjectReference Include="..\..\Engine\Xr.Engine.Filament\Xr.Engine.Filament.csproj" />
		<ProjectReference Include="..\..\Framework\OpenXr.Framework.Android\OpenXr.Framework.Android.csproj" />
		<ProjectReference Include="..\..\Engine\Xr.Engine.OpenXr\Xr.Engine.OpenXr.csproj" />
		<ProjectReference Include="..\Xr.Test.Common\Xr.Test.Common.csproj" />
		<ProjectReference Include="..\..\WebLink\Xr.WebLink.Android\Xr.WebLink.Android.csproj" />
	</ItemGroup>

	<Import Project="..\..\AspNetCoreMini.props" />

</Project>